---
import Layout from "../layouts/Layout.astro";
import Banner from "../components/Banner.astro";
import FeatureGrid from "../components/FeatureGrid.astro";
import Welcome from "../components/Welcome.astro";
---

<Layout>
  <section class="hero_div" aria-hidden="true">
    <video
      class="hero_video"
      src="/astemon.mov"
      autoplay
      muted
      loop
      playsinline
      preload="auto"></video>

    <!-- brand tint overlay -->
    <div class="hero_overlay" aria-hidden="true"></div>

    <!-- hero graphic (SVG) -->
    <img
      src="/img/hero_graphic.svg"
      alt=""
      class="hero_graphic"
      loading="lazy"
      width="800"
      height="600"
      aria-hidden="true"
    />

    <!-- scroll CTA -->
    <a href="#scrolling-banner" class="hero_cta" aria-label="Scroll to banner">
      <span class="hero_cta_text">EXPLORE</span>
      <span class="hero_cta_arrow" aria-hidden="true">▾</span>
    </a>
  </section>
  <Banner
    h3_1="SORTING GUIDE"
    h3_2="WASTE EXPERIENCE"
    h3_3="THE CYCLE OF LIFE"
  />
  <Welcome />
  <FeatureGrid />
</Layout>

<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", () => {
    const video = document.querySelector(".hero_video");
    if (video) {
      video.playbackRate = 0.7; // 0.5 = halvt tempo, 0.7 = 35% langsommere, 1 = normal
    }
  });
</script>

<style>
  /* smooth anchor scrolling (CSS-first) */
  html {
    scroll-behavior: smooth;
  }

  .hero_div {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
    margin: 0;
  }

  .hero_video {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    min-height: 100%;
    min-width: 100%;
    width: auto;
    height: auto;
    object-fit: cover;
  }

  .hero_overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
    background: var(--green);
    opacity: 0.4;
    mix-blend-mode: screen;
  }

  .hero_graphic {
    position: absolute;
    top: 48%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: auto;
    max-width: 800px;
    z-index: 5; /* lavere z-index så den ikke kommer over header */
    pointer-events: none;
    animation: pulse-scale 3s ease-in-out infinite;
  }

  @keyframes pulse-scale {
    0%,
    100% {
      transform: translate(-50%, -50%) scale(1);
    }
    50% {
      transform: translate(-50%, -50%) scale(1.03);
    }
  }

  .hero_cta {
    position: absolute;
    left: 50%;
    bottom: 40px;
    transform: translateX(-50%);
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    text-transform: uppercase;
    font-family:
      Archivo Narrow,
      sans-serif;
    z-index: 15; /* reduceret z-index */
    pointer-events: auto;
    color: var(--green);
    transition: all 300ms ease;
    font-size: 1.1rem;
  }

  .hero_cta:hover {
    opacity: 0.7; /* fade slightly on hover */
  }

  .hero_cta:hover .hero_cta_arrow {
    animation: bounce-arrow 0.6s ease infinite; /* animate arrow */
  }

  @keyframes bounce-arrow {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(8px);
    }
  }

  .hero_cta_text {
    transition: letter-spacing 300ms ease;
  }

  .hero_cta_arrow {
    display: block;
    font-size: 3rem;
    opacity: 0.9;
    margin-top: -1rem;
    transition: transform 300ms ease;
  }

  /* small responsive tweak */
  @media (max-width: 600px) {
    .hero_graphic {
      max-width: 90%;
    }
    .hero_cta {
      bottom: 24px;
    }
    .hero_cta_text {
      font-size: 0.8rem;
    }
  }
</style>
