---
import Layout from "../layouts/Layout.astro";
import Banner from "../components/Banner.astro";
import FeatureGrid from "../components/FeatureGrid.astro";
import Welcome from "../components/Welcome.astro";
---

<Layout>
  <section class="hero_div" aria-hidden="true">
    <video
      class="hero_video"
      src="/astemon.mov"
      autoplay
      muted
      loop
      playsinline
      preload="auto"></video>

    <!-- brand tint overlay -->
    <div class="hero_overlay" aria-hidden="true"></div>

    <!-- scroll CTA -->
    <a href="#scrolling-banner" class="hero_cta" aria-label="Scroll to banner">
      <span class="hero_cta_text">SCROLL DOWN</span>
      <span class="hero_cta_arrow" aria-hidden="true">▾</span>
    </a>
  </section>
  <Banner
    h3_1="SORTING GUIDE"
    h3_2="WASTE EXPERIENCE"
    h3_3="THE CYCLE OF LIFE"
  />
  <Welcome />
  <FeatureGrid />
</Layout>

<style>
  /* smooth anchor scrolling (CSS-first) */
  html {
    scroll-behavior: smooth;
  }

  .hero_div {
    position: relative;
    width: 100%;
    height: 100vh; /* fylder hele skærmens højde */
    overflow: hidden;
    margin: 0;
  }

  .hero_video {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    min-height: 100%;
    min-width: 100%;
    width: auto;
    height: auto;
    object-fit: cover;
  }

  .hero_overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
    background: var(--green);
    opacity: 0.4;
    mix-blend-mode: screen;
  }

  .hero_cta {
    position: absolute;
    left: 50%;
    bottom: 40px;
    transform: translateX(-50%);
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    text-transform: uppercase;
    font-family:
      Archivo Narrow,
      sans-serif;
    z-index: 20;
    pointer-events: auto;
    color: var(--green);
    transition: all 300ms ease; /* smooth transition for hover */
  }

  .hero_cta:hover {
    opacity: 0.7; /* fade slightly on hover */
  }

  .hero_cta:hover .hero_cta_arrow {
    animation: bounce-arrow 0.6s ease infinite; /* animate arrow */
  }

  @keyframes bounce-arrow {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(8px);
    }
  }

  .hero_cta_text {
    transition: letter-spacing 300ms ease;
  }

  .hero_cta_arrow {
    display: block;
    font-size: 3rem;
    opacity: 0.9;
    margin-top: -1rem;
    transition: transform 300ms ease;
  }

  /* small responsive tweak */
  @media (max-width: 600px) {
    .hero_cta {
      bottom: 24px;
    }
    .hero_cta_text {
      font-size: 0.8rem;
    }
  }
</style>
