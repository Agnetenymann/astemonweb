---
import "../styles/generel.css";

export interface Props {
  h3_1: string;
  h3_2: string;
  h3_3: string;
}

const { h3_1, h3_2, h3_3 } = Astro.props;
---

<section class="scrolling-banner">
  <div class="banner-content">
    <!-- SÆT 1 -->
    <h3 class="banner_h3">{h3_1}</h3>
    <svg
      class="banner_arrow"
      width="40"
      height="40"
      viewBox="0 0 24 24"
      fill="none"
      stroke="var(--green)"
      stroke-width="3"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <line x1="-1" y1="12" x2="19" y2="12"></line>
      <polyline points="12 5 19 12 12 19"></polyline>
    </svg>

    <h3 class="banner_h3">{h3_2}</h3>
    <svg
      class="banner_arrow"
      width="40"
      height="40"
      viewBox="0 0 24 24"
      fill="none"
      stroke="var(--green)"
      stroke-width="3"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <line x1="-1" y1="12" x2="19" y2="12"></line>
      <polyline points="12 5 19 12 12 19"></polyline>
    </svg>

    <h3 class="banner_h3">{h3_3}</h3>
    <svg
      class="banner_arrow"
      width="40"
      height="40"
      viewBox="0 0 24 24"
      fill="none"
      stroke="var(--green)"
      stroke-width="3"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <line x1="-1" y1="12" x2="19" y2="12"></line>
      <polyline points="12 5 19 12 12 19"></polyline>
    </svg>

    <!-- SÆT 2 – PRÆCIS DET SAMME IGEN TIL LOOP -->
    <h3 class="banner_h3">{h3_1}</h3>
    <svg
      class="banner_arrow"
      width="40"
      height="40"
      viewBox="0 0 24 24"
      fill="none"
      stroke="var(--green)"
      stroke-width="3"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <line x1="-1" y1="12" x2="19" y2="12"></line>
      <polyline points="12 5 19 12 12 19"></polyline>
    </svg>

    <h3 class="banner_h3">{h3_2}</h3>
    <svg
      class="banner_arrow"
      width="40"
      height="40"
      viewBox="0 0 24 24"
      fill="none"
      stroke="var(--green)"
      stroke-width="3"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <line x1="-1" y1="12" x2="19" y2="12"></line>
      <polyline points="12 5 19 12 12 19"></polyline>
    </svg>

    <h3 class="banner_h3">{h3_3}</h3>
    <svg
      class="banner_arrow"
      width="40"
      height="40"
      viewBox="0 0 24 24"
      fill="none"
      stroke="var(--green)"
      stroke-width="3"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <line x1="-1" y1="12" x2="19" y2="12"></line>
      <polyline points="12 5 19 12 12 19"></polyline>
    </svg>
  </div>
</section>

<style>
  .scrolling-banner {
    background-color: var(--taupe);
    overflow: hidden;
    width: 100%;
  }

  .banner-content {
    display: inline-flex;
    align-items: center;
    white-space: nowrap;
    width: max-content;
    animation: scroll 30s linear infinite;
    height: 60px;
  }

  /* alt indhold skal have fast bredde – må ikke shrinke */
  .banner-content > * {
    flex: 0 0 auto;
  }

  .banner_h3 {
    font-family:
      lexend mega,
      sans-serif;
    margin: 0;
    padding: 0 40px;
    font-size: 30px;
    font-weight: 400;
    display: flex;
    align-items: center;
    color: var(--green);
    white-space: nowrap; /* SORTING GUIDE bliver på én linje */
  }

  .banner_arrow {
    margin: 0 20px;
  }

  @keyframes scroll {
    from {
      transform: translateX(-50%);
    }
    to {
      transform: translateX(0%); /* 2 identiske sæt = perfekt loop */
    }
  }
</style>
