---
import "../styles/generel.css";
---

<footer class="Footer">
  <div class="Footer_inner">
    <!-- Stor titel -->
    <h2 class="Footer_title">THANK YOU FOR YOUR CURIOSITY</h2>

    <!-- 3 kolonner -->
    <div class="Grid_1-1-1">
      <!-- Kolonne 1: Lets talk sorting -->
      <section class="Footer_box Footer_box--sorting">
        <h3 class="Footer_heading">LETS TALK SORTING</h3>
        <p class="Footer_text">
          Sign up and join our community!<br />
          Receive news about waste sorting<br />
          and new initiatives in Lisbon
        </p>

        <form class="Footer_email_form" action="/" method="POST">
          <div class="Footer_email_wrap">
            <input
              type="email"
              name="email"
              class="Footer_email_input"
              placeholder="EMAIL INPUT"
              required
            />
            <button type="submit" class="Footer_email_button">
              <svg
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="3"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <line x1="-1" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </button>
          </div>
          <p class="Footer_email_success">Welcome! Now check your mail</p>
        </form>
      </section>

      <!-- Kolonne 2: Contact -->
      <section class="Footer_box Footer_box--contact">
        <h3 class="Footer_heading">CONTACT</h3>
        <p class="Footer_text">
          Questions? Comments?<br />
          Doubts?
        </p>
        <p class="Footer_text">
          Send us a text or an e-mail at<br />
          <a href="tel:+xxxxxxxxxxx" class="Footer_link">+xx xxx xxx xxx x</a>
          <a href="mailto:Astemoncontact@gmail.com" class="Footer_link"
            >Astemoncontact@gmail.com</a
          >
        </p>
      </section>

      <!-- Kolonne 3: Explore + Socials -->
      <section class="Footer_box Footer_box--links">
        <div class="Footer_subbox">
          <h3 class="Footer_heading">EXPLORE</h3>
          <ul class="Footer_list">
            <li>
              <a href="/cycle#experience-section" class="Footer_link"
                >INTERACTIVE EXPERIENCE →</a
              >
            </li>
            <li><a href="/guide" class="Footer_link">RECYCLING GUIDE →</a></li>
            <li>
              <a href="/cycle#life-cycle-section" class="Footer_link"
                >LIFE CYCLE OF WASTE →</a
              >
            </li>
            <li><a href="/about" class="Footer_link">ABOUT US →</a></li>
          </ul>
        </div>

        <div class="Footer_subbox Footer_subbox--socials">
          <h3 class="Footer_heading">SOCIALS</h3>
          <ul class="Footer_list">
            <li><a href="#" class="Footer_link">LINKEDIN →</a></li>
            <li><a href="#" class="Footer_link">INSTAGRAM →</a></li>
            <li><a href="#" class="Footer_link">TIKTOK →</a></li>
          </ul>
        </div>
      </section>
    </div>
  </div>

  <!-- Nederste linje + tekst -->
  <div class="Footer_bottom_line"></div>
  <p class="Footer_bottom_text">
    “ASTEMON SUPPORTS UN SDG 11: SUSTAINABLE CITIES AND COMMUNITIES.”
  </p>
</footer>

<style>
  /* Selve footeren */
  .Footer {
    background-color: var(--ashbrown);
    color: var(--green);
    padding: 6rem 1rem 1.5rem;
    padding-bottom: 0.8rem;
    font-family: "Archivo Narrow", sans-serif;
  }

  h3,
  p {
    color: var(--green);
  }

  /* Indre container */
  .Footer_inner {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Stor top-overskrift */
  .Footer_title {
    font-family: "Lexend Mega", sans-serif;
    font-weight: 500;
    font-size: 2rem;
    color: var(--green);
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin-bottom: 3rem;
  }

  /* 3-kolonne grid */
  .Grid_1-1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
  }

  /* Bokse */
  .Footer_box {
    font-size: 0.95rem;
  }

  /* Overskrifter i kolonner */
  .Footer_heading {
    font-family: "Archivo Narrow", sans-serif;
    font-optical-sizing: auto;
    font-weight: 100;
    font-size: 1.7rem;
    text-transform: uppercase;
    margin-bottom: 0.7rem;
  }

  /* Brødtekst */
  .Footer_text {
    margin-bottom: 1.5rem;
    color: var(--white);
    line-height: 1.6;
    font-size: 0.9rem;
    font-family: "Roboto", sans-serif;
    font-weight: 400;
    font-style: light;
  }

  /* Knap til email input */
  .Footer_button {
    margin-top: 1rem;
    padding: 0.9rem 1.8rem;
    border: 1px solid var(--white);
    background: transparent;
    color: var(--white);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    display: inline-flex;
    align-items: center;
    gap: 1.5rem;
    cursor: pointer;
    font: inherit;
  }

  .Footer_button:hover {
    transition: 0.25s ease;
  }

  /* Lister i højre kolonne */
  .Footer_subbox {
    margin-bottom: 2rem;
    text-align: right;
  }

  .Footer_list {
    list-style: none;
    padding: 0;
    margin: 0.3rem 0 0;
  }

  .Footer_link {
    text-decoration: none;
    color: var(--white);
    text-transform: uppercase;
    font-size: 0.8rem;
    display: block;
    margin: 0.5rem 0;
  }

  .Footer_link:hover {
    text-decoration: underline;
  }

  .Footer_bottom_line {
    border-top: 1px solid var(--green);
    margin-top: 3rem;

    width: 100vw; /* fylder hele viewport-bredden */
    position: relative;
    left: 50%;
    transform: translateX(-50%);
  }

  .Footer_bottom_text {
    text-align: right;
    margin-top: 0.6rem;
    font-size: 0.75rem;
    text-transform: uppercase;
  }

  /* Wrapper around input + arrow */
  .Footer_email_wrap {
    display: flex;
    align-items: center;
    border: 1px solid var(--green);
    padding: 0.9rem 1.2rem;
    background: transparent;
    width: fit-content;
    gap: 1.5rem;
  }

  /* The email input */
  .Footer_email_input {
    background: transparent;
    border: none;
    outline: none;
    color: var(--green);
    font-family: inherit;
    font-size: 0.7rem;
    letter-spacing: 0.1em;
  }

  /* Placeholder color */
  .Footer_email_input::placeholder {
    color: var(--green);
    opacity: 0.8;
  }

  /* Submit button (arrow) */
  .Footer_email_button {
    background: transparent;
    border: none;
    color: var(--green);
    font-size: 1.2rem;
    cursor: pointer;
    padding: 0;
    transition: all 0.5s ease-in-out; /* ← gør at pilen glider tilbage */
    transform: translateX(0);
  }

  .Footer_email_button:hover {
    transform: translateX(5px);
    transition: all 0.35s ease-in-out;
  }

  .Footer_email_success {
    opacity: 0;
    transform: translateY(10px); /* small downward offset */
    transition:
      opacity 0.5s ease,
      transform 0.5s ease;
    color: var(--green);
    font-size: 0.8rem;
    margin-top: 0.7rem;
    letter-spacing: 0.1em;
    pointer-events: none; /* prevents accidental clicks */
  }

  /* When visible */
  .Footer_email_success.show {
    opacity: 1;
    transform: translateY(0);
  }

  .Footer_text a {
    color: var(--white); /* same as your footer text color */
    text-decoration: none;
  }

  .Footer_text a:hover {
    text-decoration: underline;
  }

  @media (max-width: 900px) {
    .Grid_1-1-1 {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .Footer {
      padding: 3rem 2.5rem 2.5rem;
    }

    .Footer_title {
      text-align: left;
      font-size: 1.5rem;
    }

    .Footer_bottom_text {
      margin-top: 1rem;
    }

    .Footer_subbox {
      margin-bottom: 2rem;
      text-align: left;
    }

    .Footer_heading {
      font-size: 1.3rem;
    }

    /* Brødtekst */
    .Footer_text {
      font-size: 0.8rem;
    }
  }
</style>

<script type="text/javascript">
  const form = document.querySelector(".Footer_email_form");
  const successMsg = document.querySelector(".Footer_email_success");

  form.addEventListener("submit", function (e) {
    e.preventDefault();

    successMsg.classList.add("show");

    setTimeout(() => {
      successMsg.classList.remove("show");
    }, 5000);

    form.reset();
  });
</script>
