---
import "../styles/generel.css";
---

<div class="top">
  <header>
    <div class="logo">
      <a href="/">
        <img src="/img/wordmark.svg" alt="logo" class="logo" id="main-logo" />
      </a>
    </div>
    <div>
      <nav>
        <ul class="menu">
          <li><a href="/index">HOME</a></li>
          <li><a href="/cycle#experience-section">EXPERIENCE</a></li>
          <li><a href="/cycle#life-cycle-section">LIFE CYCLE</a></li>
          <li><a href="/guide">SORTING GUIDE</a></li>
          <li><a href="/about">ABOUT US</a></li>
        </ul>
        <div class="burger">
          <div class="line"></div>
          <div class="line"></div>
          <div class="line"></div>
        </div>
      </nav>
    </div>
  </header>
</div>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .top {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 10;
  }

  .logo {
    width: 150px;
    margin-right: 10px; /* Juster afstanden mellem logoet og teksten efter behov */
  }

  /* smooth scale on the image */
  #main-logo {
    display: block;
    width: 100%;
    transition: transform 180ms ease; /* gør animation glidende */
    transform-origin: center;
    will-change: transform;
  }

  .logo:hover #main-logo,
  #main-logo:hover {
    transform: scale(1.6);
  }

  header {
    position: relative;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  nav {
    display: flex;
    align-items: center;
  }

  .menu {
    display: flex;
    list-style: none;
    margin: 0.5rem;
    padding: 0;
    margin-right: 1rem;
  }

  .menu li {
    margin-right: 20px;
  }

  .menu li:last-child {
    margin-right: 0;
  }

  .menu a {
    display: block;
    padding: 10px;
    color: var(--ashbrown);
    text-decoration: none;
    transition: color 0.3s;
    text-align: end;
    font-family: "Archivo Narrow", sans-serif;
    font-style: normal;
    font-weight: 400;
  }

  .menu a:hover {
    font-weight: 800;
    transition: ease-in-out 0.6s;
  }

  .burger {
    width: 30px;
    height: 20px;
    cursor: pointer;
  }

  .burger .line {
    width: 100%;
    height: 2px;
    background-color: var(--ashbrown);
    margin-bottom: 5px;
    transition: 0.2s linear;
  }
  .burger {
    display: none;
  }
  @media screen and (max-width: 750px) {
    .menu {
      display: none;
      margin: 0;
      margin-top: 1rem;
    }
    .burger {
      display: block;
    }
    .menu a:hover {
      color: var(--ashbrown);
    }
    .burger.active .line {
      background-color: var(--ashbrown);
    }

    .burger.active .line:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
      transition: 0.2s linear;
    }

    .burger.active .line:nth-child(2) {
      opacity: 0;
      transition: 0.15s linear;
    }

    .burger.active .line:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
      transition: 0.2s linear;
    }

    nav.active .menu {
      display: block;
      background-color: transparent;
      position: absolute;
      top: 94px;
      left: 0;
      width: 100%;
      z-index: 1;
    }

    nav.active .menu li {
      margin: 10px 20px;
    }

    nav.active .menu a {
      font-size: 24px;
      color: var(--ashbrown);
    }

    .logo {
      width: 45px;
      margin-left: 0rem;
    }

    header {
      position: sticky;
      z-index: 100;
      padding: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
  }

  #life-cycle-section,
  #experience-section {
    scroll-margin-top: 100px; /* justér efter header-højde */
  }
</style>

<script type="text/javascript">
  const burger = document.querySelector(".burger");
  const nav = document.querySelector("nav");
  const menu = document.querySelector(".menu");

  // åbner burger og nav --> toogle = tilføjer eller fjerne class
  burger.addEventListener("click", burgerClick);
  function burgerClick() {
    burger.classList.toggle("active");
    nav.classList.toggle("active");
  }

  // lukker navigationdn
  menu.addEventListener("click", menuClick);
  function menuClick() {
    burger.classList.remove("active");
    nav.classList.remove("active");
  }
</script>

<script type="text/javascript">
  const logo = document.getElementById("main-logo");

  function updateLogo() {
    if (window.innerWidth <= 750) {
      logo.src = "/img/logo.svg"; // mobil
    } else {
      logo.src = "/img/wordmark.svg"; // desktop
    }
  }

  updateLogo();
  window.addEventListener("resize", updateLogo);
</script>
