---
import "../styles/generel.css";
---

<div class="top">
  <header>
    <div class="logo-wrapper">
      <a href="/">
        <img src="/img/wordmark.svg" alt="logo" class="logo" id="main-logo" />
      </a>
    </div>

    <nav>
      <ul class="menu">
        <li><a href="/cycle#experience-section">EXPERIENCE</a></li>
        <li><a href="/cycle#life-cycle-section">LIFE CYCLE</a></li>
        <li><a href="/guide">SORTING GUIDE</a></li>
        <li><a href="/about">ABOUT US</a></li>
      </ul>

      <!-- BURGER (desktop skjult, mobil synlig) -->
      <div class="burger">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
      </div>
    </nav>
  </header>
</div>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .top {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 10;
  }

  header {
    position: relative;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.25rem 0.5rem;
  }

  .logo-wrapper {
    display: flex;
    align-items: center;
  }

  .logo {
    width: 150px;
  }

  #main-logo {
    display: block;
    transition: transform 180ms ease; /* gør animation glidende */
    transform-origin: center;
    will-change: transform;
  }

  .logo:hover #main-logo,
  #main-logo:hover {
    transform: scale(1.03);
  }

  nav {
    display: flex;
    align-items: center;
  }

  .menu {
    display: flex;
    list-style: none;
    margin: 0.5rem 0;
    padding: 0;
    margin-right: 1rem;
  }

  .menu li {
    margin-right: 10px;
  }

  .menu li:last-child {
    margin-right: 0;
  }

  .menu a {
    display: block;
    padding: 10px;
    color: var(--ashbrown);
    text-decoration: none;
    font-family: "Archivo Narrow", sans-serif;
    font-weight: 400;
  }

  .menu a:hover {
    font-weight: 800;
    transition: ease-in-out 0.6s;
  }

  .burger {
    width: 30px;
    height: 20px;
    cursor: pointer;
    display: none; /* skjult på desktop */
  }

  .burger .line {
    width: 100%;
    height: 2px;
    background-color: var(--ashbrown);
    margin-bottom: 5px;
    transition: 0.2s linear;
  }

  @media screen and (max-width: 750px) {
    .logo {
      width: 45px;
      position: relative;
      z-index: 100;
    }

    .menu {
      display: none;
      margin: 0;
      padding: 0;
    }

    .burger {
      display: block;
      position: relative;
      z-index: 100;
    }

    .menu a:hover {
      color: var(--ashbrown);
    }

    /* kryds-animation */
    .burger.active .line {
      background-color: var(--ashbrown);
    }

    .burger.active .line:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
      transition: 0.2s linear;
    }

    .burger.active .line:nth-child(2) {
      opacity: 0;
      transition: 0.15s linear;
    }

    .burger.active .line:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
      transition: 0.2s linear;
    }

    nav.active .menu {
      display: flex;
      flex-direction: column;
      position: fixed;
      inset: 0 0 0 200px;
      padding: 6rem 2.5rem 2.5rem;
      background-color: var(--light_green);
      z-index: 10;
      list-style: none;
    }

    nav.active .menu li {
      margin: 0 0 0.5rem;
    }

    nav.active .menu a {
      font-size: 1rem;
      color: var(--ashbrown);
      text-decoration: none;
      text-align: right;
      text-transform: uppercase;
      font-family:
        archivo narrow,
        sans-serif;
      letter-spacing: 0.08em;
    }

    nav.active .menu li:last-child a {
      border-bottom: none;
    }

    nav.active .menu a:hover {
      transform: translateX(4px);
      transition: transform 0.2s ease-out;
    }

    header {
      padding: 0.75rem 1.25rem;
    }
  }

  #life-cycle-section,
  #experience-section {
    scroll-margin-top: 100px;
  }
</style>

<script type="text/javascript">
  const burger = document.querySelector(".burger");
  const nav = document.querySelector("nav");
  const menu = document.querySelector(".menu");
  let scrollPosition = 0;

  function disableScroll() {
    scrollPosition = window.pageYOffset || document.documentElement.scrollTop;
    document.body.style.position = "fixed";
    document.body.style.top = `-${scrollPosition}px`;
    document.body.style.left = "0";
    document.body.style.right = "0";
  }

  function enableScroll() {
    document.body.style.position = "";
    document.body.style.top = "";
    document.body.style.left = "";
    document.body.style.right = "";
    window.scrollTo(0, scrollPosition);
  }

  if (burger && nav && menu) {
    burger.addEventListener("click", () => {
      burger.classList.toggle("active");
      const isActive = nav.classList.toggle("active");
      if (isActive) disableScroll();
      else enableScroll();
    });

    // luk menuen når man klikker på et link
    menu.addEventListener("click", () => {
      burger.classList.remove("active");
      nav.classList.remove("active");
      enableScroll();
    });
  }
</script>

<script type="text/javascript">
  const logo = document.getElementById("main-logo");

  function updateLogo() {
    if (!logo) return;
    if (window.innerWidth <= 750) {
      logo.src = "/img/logo.svg"; // mobil
    } else {
      logo.src = "/img/wordmark.svg"; // desktop
    }
  }

  updateLogo();
  window.addEventListener("resize", updateLogo);
</script>
